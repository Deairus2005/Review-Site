@model IEnumerable<ReviewsSite.Models.Product>

@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Personal Care</title>
</head>
<body>
    <h1>Product List</h1>
    <hr />
    <ul>
        @foreach (var product in Model)
        {
            <li><a href="/Product/Details/@product.Id">@product.Name</a></li>
        }
    </ul>
</body>
</html>
